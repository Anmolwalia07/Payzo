{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "db:generate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    },
    "build:styles": {
      "env": ["NODE_ENV"],
      "outputs": ["dist/**"]
    },
    "build:components": {
      "env": ["NODE_ENV"],
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["^build", "^db:generate","build:styles", "build:components"],
      "env": [
        "DATABASE_URL",
        "NEXT_PUBLIC_RAZORPAY_KEY",
        "NEXT_PUBLIC_ServerUrl",
        "NODE_ENV"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    }
  }
}