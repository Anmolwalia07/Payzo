{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "db:generate":{
      "cache": false
    },
    "db:migrate":{
      "cache": false,
      "persistent": true
    },
    "db:deploy":{
      "cache": false
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build","^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "DATABASE_URL","NEXT_PUBLIC_RAZORPAY_KEY","NEXT_PUBLIC_ServerUrl","NODE_ENV"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
     "build:styles": {
      "outputs": ["dist/index.css"],
      "env": ["NODE_ENV"]
    },
    "build:components": {
      "outputs": ["dist/**"],
      "env": ["NODE_ENV", "DATABASE_URL","NEXT_PUBLIC_RAZORPAY_KEY","NEXT_PUBLIC_ServerUrl"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    }
  }
}
